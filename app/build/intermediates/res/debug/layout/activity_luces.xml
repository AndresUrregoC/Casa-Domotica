            android:text="@string/l_bano_alcoba"
            android:textColor="#fff"
            android:textOn="Encendido"
            android:textOff="Apagado"
             />
         
          <Switch
            android:id="@+id/l_comedor"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
